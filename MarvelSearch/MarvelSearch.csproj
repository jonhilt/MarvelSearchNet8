<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>aspnet-MarvelSearch-75f4486f-9322-4f74-98d9-27f6286efc1a</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <None Update="app.db" CopyToOutputDirectory="PreserveNewest" ExcludeFromSingleFile="true" />
    <None Include="wwwroot\icons\heart-filled.svg" />
    <None Include="wwwroot\icons\heart-outline.svg" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.QuickGrid" Version="8.0.0-rc.2.23480.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.QuickGrid.EntityFrameworkAdapter" Version="8.0.0-rc.2.23480.2" />
    <PackageReference Include="Tailwind.Extensions.AspNetCore" Version="1.1.0-beta1" />
    <ProjectReference Include="..\FluentMarvel\FluentMarvelSdk.csproj" />
    <ProjectReference Include="..\MarvelSearch.Client\MarvelSearch.Client.csproj" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="8.0.0-rc.2.23480.2" />
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="8.0.0-rc.2.23480.2" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="8.0.0-rc.2.23480.2" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="8.0.0-rc.2.23480.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="8.0.0-rc.2.23480.1" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Components\Search\Index.razor" />
    <_ContentIncludedByDefault Remove="Components\Search\SearchResult.razor" />
    <_ContentIncludedByDefault Remove="Components\Favourites\Index.razor" />
    <_ContentIncludedByDefault Remove="Components\Pages\Favourites\Index.razor" />
    <_ContentIncludedByDefault Remove="Components\Search\Details.razor" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Components\Pages\Favourites\Index.razor" />
    <AdditionalFiles Include="Components\Pages\Search\Details.razor" />
    <AdditionalFiles Include="Components\Pages\Search\Index.razor" />
    <AdditionalFiles Include="Components\Pages\Search\SearchResult.razor" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Components\Favourites\Index.razor" />
  </ItemGroup>

</Project>
